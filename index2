    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // PLAYER STATS
            let player = {
                maxHp: 10,
                currentHp: 10,
                luck: 0, 
                gold: 99,
                baseAttack: 8,
                attackBonus: 0,
                baseArmor: 0,
                armorBonus: 0,
                maxMp: 10,
                currentMp: 10,
                moons: 0, // Moons for special arts
                statusEffects: [], // Handles active player buffs/debuffs
            };

            // UI ELEMENTS
            const hpBar = document.getElementById('hp-bar');
            const hpText = document.getElementById('hp-text');
            const playerGoldEl = document.getElementById('player-gold');
            const buyItemBtn = document.getElementById('buy-item-btn');
            const attackPowerEl = document.getElementById('attack-power');
            const playerArmorEl = document.getElementById('player-armor');
            const topStatusBar = document.getElementById('top-status-bar');
            const playerLuckStatEl = document.getElementById('player-luck-stat');
            const playerArmorContainer = document.getElementById('player-armor-container');
            const playerHpContainer = document.getElementById('player-hp-container');
            const buyMapItemBtn = document.getElementById('buy-map-item-btn');
            const magicBar = document.getElementById('magic-bar');
            const magicText = document.getElementById('magic-text');
            const spellButtons = document.querySelectorAll('#quests-modal-wrapper button:not(.close-modal-btn)');


            function updatePlayerUI() {
                hpText.textContent = `${player.currentHp}/${player.maxHp}`;
                hpBar.style.width = `${(player.currentHp / player.maxHp) * 100}%`;
                playerGoldEl.textContent = player.gold;
                attackPowerEl.textContent = player.baseAttack + player.attackBonus;
                playerArmorEl.textContent = player.baseArmor + player.armorBonus;
                if (playerLuckStatEl) {
                    playerLuckStatEl.textContent = `ğŸ€ ${player.luck}%`;
                }
            }
            
            function updateMoonModalUI() {
                if (buyMapItemBtn) {
                    buyMapItemBtn.innerHTML = `${player.moons}ğŸŒ™`;
                    if (player.moons > 0) {
                        buyMapItemBtn.disabled = false;
                        buyMapItemBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    } else {
                        buyMapItemBtn.disabled = true;
                        buyMapItemBtn.classList.add('opacity-50', 'cursor-not-allowed');
                    }
                }
            }

            function updateMagicUI() {
                if (magicBar && magicText) {
                    magicText.textContent = `${player.currentMp}/${player.maxMp}`;
                    magicBar.style.width = `${(player.currentMp / player.maxMp) * 100}%`;
                    spellButtons.forEach(button => {
                        if (player.currentMp < 5) { // Assuming all spells cost 5 for now
                            button.disabled = true;
                            button.classList.add('opacity-50', 'cursor-not-allowed');
                        } else {
                            button.disabled = false;
                            button.classList.remove('opacity-50', 'cursor-not-allowed');
                        }
                    });
                }
            }

            // MODAL LOGIC
            const modalButtons = document.querySelectorAll('[data-modal-target]');
            const closeButtons = document.querySelectorAll('.close-modal-btn');
            const buttonGrid = document.getElementById('button-grid');
            const allModals = document.querySelectorAll('.modal-wrapper');
            const rewardModal = document.getElementById('reward-modal');
            
            const openModal = (modal) => {
                if (modal == null) return;
                buttonGrid.classList.add('hidden');
                modal.classList.remove('hidden');
                
                if (modal.id === 'items-modal-wrapper') {
                    carousel.scrollLeft = 0;
                    updateShopSelection();
                } else if (modal.id === 'map-modal-wrapper') {
                    mapCarousel.scrollLeft = 0;
                    updateMapSelection();
                    updateMoonModalUI();
                } else if (modal.id === 'equip-modal-wrapper') {
                    initializeFortuneSelection();
                } else if (modal.id === 'quests-modal-wrapper') {
                    updateMagicUI();
                }
            }

            const closeModal = () => {
                allModals.forEach(modal => {
                    if (!modal.classList.contains('hidden')) {
                        modal.classList.add('hidden');
                    }
                });
                buttonGrid.classList.remove('hidden');
            }

            modalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modal = document.getElementById(button.dataset.modalTarget);
                    openModal(modal);
                });
            });

            closeButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.stopPropagation(); 
                    closeModal();
                });
            });

            // SHOP CAROUSEL LOGIC
            const shopItems = [
                { title: 'Tonic', description: 'Restores 6 HP.', owned: 0, cost: 5 },
                { title: 'Cross', description: 'Cures curse, +1 max HP.', owned: 0, cost: 10 },
                { title: 'Gem', description: 'Gain a buff, give a debuff.', owned: 0, cost: 15 },
                { title: 'Fairy', description: 'Restores magic meter.', owned: 0, cost: 15 },
                { title: 'Moonstone', description: 'Grants 1 Moon to spend.', owned: 0, cost: 20 },
                { title: 'Infinity Ring', description: 'Take damage to reroll.', owned: 0, cost: 25, purchased: false },
            ];
            const carousel = document.getElementById('shop-carousel');
            const carouselItems = carousel.querySelectorAll('.shop-item');
            const itemTitle = document.getElementById('item-title');
            const itemDescription = document.getElementById('item-description');
            const itemOwned = document.getElementById('item-owned');
            let currentShopIndex = 0;

            // Add click listeners to consume items from the carousel
            carouselItems.forEach(item => {
                item.addEventListener('click', () => {
                    const itemIndex = parseInt(item.dataset.index, 10);
                    const selectedItemData = shopItems[itemIndex];

                    // If the clicked item isn't the currently selected one, just scroll to it.
                    if (itemIndex !== currentShopIndex) {
                        const targetScroll = item.offsetLeft - (carousel.offsetWidth / 2) + (item.offsetWidth / 2);
                        carousel.scrollTo({
                            left: targetScroll,
                            behavior: 'smooth'
                        });
                        return; // Exit without consuming
                    }
                    
                    // If it is the selected item, and we own some, and it's not a permanent purchase...
                    if (selectedItemData.owned > 0 && !selectedItemData.purchased) {
                        selectedItemData.owned--;
                        
                        // FUTURE: Add actual item effect logic here.
                        console.log(`Consumed ${selectedItemData.title}. Remaining: ${selectedItemData.owned}`);

                        // Add a small visual feedback animation on tap
                        // This class temporarily overrides the 'scale-125' for a shrink effect
                        item.classList.add('transition-transform', 'duration-150', 'scale-110');
                        setTimeout(() => item.classList.remove('scale-110'), 150);

                        // Refresh the UI to reflect the new owned amount
                        updateShopSelection();
                    }
                });
            });

            let isShopDown = false;
            let shopStartX;
            let shopScrollLeft;

            const startShopDragging = (e) => {
                isShopDown = true;
                shopStartX = (e.pageX || e.touches[0].pageX) - carousel.offsetLeft;
                shopScrollLeft = carousel.scrollLeft;
            };

            const stopShopDragging = () => { isShopDown = false; };

            const dragShop = (e) => {
                if (!isShopDown) return;
                e.preventDefault();
                const x = (e.pageX || e.touches[0].pageX) - carousel.offsetLeft;
                const walk = (x - shopStartX); // Speed multiplier removed for more conventional feel
                carousel.scrollLeft = shopScrollLeft - walk;
            };
            
            if (carousel) {
                carousel.addEventListener('mousedown', startShopDragging);
                carousel.addEventListener('touchstart', startShopDragging);
                carousel.addEventListener('mouseleave', stopShopDragging);
                carousel.addEventListener('mouseup', stopShopDragging);
                carousel.addEventListener('touchend', stopShopDragging);
                carousel.addEventListener('mousemove', dragShop);
                carousel.addEventListener('touchmove', dragShop);
            }


            let shopScrollTimeout;
            const updateShopSelection = () => {
                clearTimeout(shopScrollTimeout);
                shopScrollTimeout = setTimeout(() => {
                    const carouselCenter = carousel.offsetWidth / 2;
                    let closestItem = null;
                    let smallestDistance = Infinity;

                    carouselItems.forEach(item => {
                        const itemRect = item.getBoundingClientRect();
                        const carouselRect = carousel.getBoundingClientRect();
                        const itemCenter = (itemRect.left - carouselRect.left) + (itemRect.width / 2);
                        const distance = Math.abs(carouselCenter - itemCenter);
                        
                        if (distance < smallestDistance) {
                            smallestDistance = distance;
                            closestItem = item;
                        }
                    });

                    if (closestItem) {
                        carouselItems.forEach(item => {
                            item.classList.remove('scale-125', 'cursor-pointer');
                            item.classList.add('scale-100');
                        });
                        closestItem.classList.remove('scale-100');
                        closestItem.classList.add('scale-125');

                        const itemIndex = parseInt(closestItem.dataset.index);
                        currentShopIndex = itemIndex;
                        const selectedItemData = shopItems[itemIndex];
                        itemTitle.textContent = selectedItemData.title;
                        itemDescription.textContent = selectedItemData.description;
                        itemOwned.textContent = `x${selectedItemData.owned}`;

                        if (selectedItemData.owned > 0 && !selectedItemData.purchased) {
                            closestItem.classList.add('cursor-pointer');
                        }
                        
                        if (selectedItemData.purchased) {
                            buyItemBtn.innerHTML = `<span>Owned</span>`;
                            buyItemBtn.disabled = true;
                            buyItemBtn.classList.add('opacity-50', 'bg-gray-500', 'cursor-not-allowed');
                            buyItemBtn.classList.remove('bg-green-500');
                        } else {
                            buyItemBtn.innerHTML = `<span>${selectedItemData.cost}</span><span>ğŸª™</span>`;
                            if (player.gold >= selectedItemData.cost) {
                                buyItemBtn.disabled = false;
                                buyItemBtn.classList.remove('opacity-50', 'bg-gray-500', 'cursor-not-allowed');
                                buyItemBtn.classList.add('bg-green-500');
                            } else {
                                buyItemBtn.disabled = true;
                                buyItemBtn.classList.add('opacity-50', 'bg-gray-500', 'cursor-not-allowed');
                                buyItemBtn.classList.remove('bg-green-500');
                            }
                        }
                    }
                }, 50);
            };
            
            if (carousel) {
                carousel.addEventListener('scroll', updateShopSelection);
            }

            buyItemBtn.addEventListener('click', () => {
                if (buyItemBtn.disabled) return;

                const itemToBuy = shopItems[currentShopIndex];
                if (player.gold >= itemToBuy.cost) {
                    player.gold -= itemToBuy.cost;
                    itemToBuy.owned++;

                    if (itemToBuy.title === 'Infinity Ring') {
                        itemToBuy.purchased = true;
                        unlockInfinityRing();
                    }
                    
                    if (itemToBuy.title === 'Moonstone') {
                        player.moons++;
                        updateMoonModalUI(); // Update moon UI in case modal is open
                    }

                    buyItemBtn.classList.add('scale-90');
                    setTimeout(() => buyItemBtn.classList.remove('scale-90'), 150);

                    updatePlayerUI();
                    updateShopSelection();
                }
            });

            // MAP CAROUSEL LOGIC / STATUS EFFECTS
            const moonArts = [
                { id: 'poison', title: 'Poison', description: '1 Damage per turn.', owned: 0, type: 'debuff' },
                { id: 'curse', title: 'Curse', description: 'Share damage.', owned: 0, type: 'debuff' },
                { id: 'sluggish', title: 'Sluggish', description: '50% Chance no action.', owned: 0, type: 'debuff' },
                { id: 'regen', title: 'Regen', description: 'Heal 1 per turn.', owned: 0, type: 'buff' },
                { id: 'blessing', title: 'Blessing', description: 'Add HP to armor.', owned: 0, type: 'buff' },
                { id: 'rush', title: 'Rush', description: '2 Actions per turn.', owned: 0, type: 'buff' }
            ];
            const mapCarousel = document.getElementById('map-carousel');
            const mapCarouselItems = mapCarousel.querySelectorAll('.map-item');
            const mapItemTitle = document.getElementById('map-item-title');
            const mapItemDescription = document.getElementById('map-item-description');
            const mapItemOwned = document.getElementById('map-item-owned');
            let currentMapIndex = 0;

            let isMapDown = false;
            let mapStartX;
            let mapScrollLeft;
            
            function updateAllStatusIcons() {
                // --- Player Statuses ---
                const playerStatusContainer = document.getElementById('player-status-effects');
                const allPlayerStatusElements = {
                    poison: document.getElementById('player-status-poison'),
                    curse: document.getElementById('player-status-curse'),
                    sluggish: document.getElementById('player-status-sluggish'),
                    regen: document.getElementById('player-status-regen'),
                    blessing: document.getElementById('player-status-blessing'),
                    rush: document.getElementById('player-status-rush'),
                };

                // Hide all player status icons first
                for (const id in allPlayerStatusElements) {
                    if (allPlayerStatusElements[id]) {
                        allPlayerStatusElements[id].style.display = 'none';
                    }
                }
                
                // Create an ordered list of active status IDs for the player
                const orderedPlayerActiveIds = moonArts
                    .map(art => art.id)
                    .filter(id => player.statusEffects.includes(id));

                // Show and re-append active statuses to enforce visual order
                orderedPlayerActiveIds.forEach(id => {
                    const span = allPlayerStatusElements[id];
                    if (span) {
                        span.style.display = 'inline';
                        playerStatusContainer.appendChild(span);
                    }
                });

                // --- Enemy Statuses ---
                const allEnemyStatusIds = ['poison', 'curse', 'sluggish', 'regen'];
                for (let i = 1; i <= 3; i++) {
                    const enemy = currentEnemies[i - 1];
                    // Find the container relative to the reel
                    const reelElement = document.getElementById(`reel${i}`);
                    if (!reelElement) continue;
                    const enemyStatusContainer = reelElement.parentElement.querySelector('.h-4');
                    if(!enemyStatusContainer) continue;

                    const allEnemySpansForSlot = {
                        poison: document.querySelector(`.enemy-${i}-status-poison`),
                        curse: document.querySelector(`.enemy-${i}-status-curse`),
                        sluggish: document.querySelector(`.enemy-${i}-status-sluggish`),
                        regen: document.querySelector(`.enemy-${i}-status-regen`),
                    };

                    // Hide all status icons for this enemy slot
                    for (const id in allEnemySpansForSlot) {
                        if (allEnemySpansForSlot[id]) {
                            allEnemySpansForSlot[id].style.display = 'none';
                        }
                    }

                    if (enemy && !enemy.isDefeated) {
                        // Create an ordered list of active status IDs for the enemy
                        const orderedEnemyActiveIds = allEnemyStatusIds.filter(id => enemy.statusEffects.includes(id));

                        // Show and re-append active statuses for this enemy
                        orderedEnemyActiveIds.forEach(id => {
                            const span = allEnemySpansForSlot[id];
                            if (span) {
                                span.style.display = 'inline';
                                enemyStatusContainer.appendChild(span);
                            }
                        });
                    }
                }
            }


            mapCarouselItems.forEach(item => {
                item.addEventListener('click', () => {
                    const itemIndex = parseInt(item.dataset.index, 10);
                    const selectedArt = moonArts[itemIndex];

                    // If the clicked item isn't the currently selected one, just scroll to it.
                    if (itemIndex !== currentMapIndex) {
                        const targetScroll = item.offsetLeft - (mapCarousel.offsetWidth / 2) + (item.offsetWidth / 2);
                        mapCarousel.scrollTo({ left: targetScroll, behavior: 'smooth' });
                        return; // Exit without using the art
                    }
                    
                    // If it is the selected item and we own some...
                    if (selectedArt.owned > 0) {
                        selectedArt.owned--; // Consume one
                        
                        // Add a small visual feedback animation
                        item.classList.add('transition-transform', 'duration-150', 'scale-110');
                        setTimeout(() => item.classList.remove('scale-110'), 150);

                        // Apply the effect
                        if (selectedArt.type === 'buff') {
                            if (!player.statusEffects.includes(selectedArt.id)) {
                                player.statusEffects.push(selectedArt.id);
                            }
                        } else if (selectedArt.type === 'debuff') {
                            currentEnemies.forEach(enemy => {
                                if (enemy && !enemy.isDefeated && !enemy.statusEffects.includes(selectedArt.id)) {
                                    enemy.statusEffects.push(selectedArt.id);
                                }
                            });
                        }
                        
                        console.log(`Used ${selectedArt.title}. Remaining: ${selectedArt.owned}`);
                        
                        // Refresh ALL UI that might have changed
                        updateMapSelection(); // Updates the owned count text
                        updateAllStatusIcons(); // Updates the visible icons in the main game screen
                    }
                });
            });

            const startMapDragging = (e) => {
                isMapDown = true;
                mapStartX = (e.pageX || e.touches[0].pageX) - mapCarousel.offsetLeft;
                mapScrollLeft = mapCarousel.scrollLeft;
            };

            const stopMapDragging = () => { isMapDown = false; };

            const dragMap = (e) => {
                if (!isMapDown) return;
                e.preventDefault();
                const x = (e.pageX || e.touches[0].pageX) - mapCarousel.offsetLeft;
                const walk = (x - mapStartX);
                mapCarousel.scrollLeft = mapScrollLeft - walk;
            };

            if (mapCarousel) {
                mapCarousel.addEventListener('mousedown', startMapDragging);
                mapCarousel.addEventListener('touchstart', startMapDragging);
                mapCarousel.addEventListener('mouseleave', stopMapDragging);
                mapCarousel.addEventListener('mouseup', stopMapDragging);
                mapCarousel.addEventListener('touchend', stopMapDragging);
                mapCarousel.addEventListener('mousemove', dragMap);
                mapCarousel.addEventListener('touchmove', dragMap);
            }

            let mapScrollTimeout;
            const updateMapSelection = () => {
                clearTimeout(mapScrollTimeout);
                mapScrollTimeout = setTimeout(() => {
                    const carouselCenter = mapCarousel.offsetWidth / 2;
                    let closestItem = null;
                    let smallestDistance = Infinity;

                    mapCarouselItems.forEach(item => {
                        const itemRect = item.getBoundingClientRect();
                        const carouselRect = mapCarousel.getBoundingClientRect();
                        const itemCenter = (itemRect.left - carouselRect.left) + (itemRect.width / 2);
                        const distance = Math.abs(carouselCenter - itemCenter);
                        
                        if (distance < smallestDistance) {
                            smallestDistance = distance;
                            closestItem = item;
                        }
                    });

                    if (closestItem) {
                        mapCarouselItems.forEach(item => {
                            item.classList.remove('scale-125');
                            item.classList.add('scale-100');
                        });
                        closestItem.classList.remove('scale-100');
                        closestItem.classList.add('scale-125');

                        const itemIndex = parseInt(closestItem.dataset.index);
                        currentMapIndex = itemIndex;
                        const selectedItemData = moonArts[itemIndex];
                        mapItemTitle.textContent = selectedItemData.title;
                        mapItemDescription.textContent = selectedItemData.description;
                        mapItemOwned.textContent = `x${selectedItemData.owned}`;

                        // Make the item tappable if owned
                        if (selectedItemData.owned > 0) {
                            closestItem.classList.add('cursor-pointer');
                        } else {
                            closestItem.classList.remove('cursor-pointer');
                        }
                    }
                }, 50);
            };
            
            if (mapCarousel) {
                mapCarousel.addEventListener('scroll', updateMapSelection);
            }

            buyMapItemBtn.addEventListener('click', () => {
                if (player.moons >= 1) {
                    player.moons--;
                    const selectedItemIndex = parseInt(mapCarousel.querySelector('.scale-125').dataset.index);
                    const purchasedArt = moonArts[selectedItemIndex];
                    purchasedArt.owned++;
                    console.log(`Purchased ${purchasedArt.title}. You have ${player.moons} moons left.`);
                    updateMoonModalUI();
                    updateMapSelection();
                }
            });

            // SPELLS MODAL LOGIC
            spellButtons.forEach(button => {
                button.addEventListener('click', () => {
                    if (button.disabled) return;
            
                    const spellCost = 5;
                    if (player.currentMp >= spellCost) {
                        player.currentMp -= spellCost;
                        updateMagicUI();
            
                        const spellName = button.dataset.spell;
                        castSpell(spellName);
                    }
                });
            });
            
            // FORTUNE MODAL LOGIC
            const fortuneModalTitle = document.getElementById('fortune-modal-title');
            const sacrificesContainer = document.getElementById('sacrifices-container');
            const fortunesContainer = document.getElementById('fortunes-container');
            
            let usedSacrifices = [];
            let usedFortunes = [];
            let currentSacrifice = null;

            const allSacrifices = [
                { emoji: 'ğŸ©¸', title: 'BLOOD PACT', description: '-3 Max HP.' },
                { emoji: 'ğŸ¦¶', title: 'BROKEN ANKLE', description: '-10% ğŸ€.' },
                { emoji: 'ğŸ’”', title: 'HEARTBREAK', description: 'Lose â¤ï¸â€ğŸ”¥ or ğŸ©¶.' },
                { emoji: 'ğŸ“œ', title: 'GAMBLING DEBT', description: '-30 Gold.' },
                { emoji: 'ğŸ«´', title: 'CLUMSY', description: 'Lose 1 ğŸŒ™.' },
                { emoji: 'ğŸ­', title: 'UNSTABLE MIND', description: 'Share ğŸ¶.' },
            ];

            const allFortunes = [
                { title: 'Double Moon', description: 'Moon Arts effect neighbors.', color: 'blue' },
                { title: 'Efficient Magic', description: '1/2 MP cost for spells.', color: 'blue' },
                { title: 'Bartering Edge', description: '15% shop discount.', color: 'blue' },
                { title: 'Archer\'s Edge', description: 'Attacks all with ğŸ¹ Bow.', color: 'yellow' },
                { title: 'Enchantment', description: 'ğŸ§šğŸ¼ Fairy also grants â‡ï¸ Regen.', color: 'yellow' },
                { title: 'Battle Grace', description: 'Buffs restore 1 ğŸ›¡ï¸ Armor.', color: 'yellow' },
                { title: 'Prolonged Torment', description: '2x ğŸ•¯ï¸ Curse and ğŸŒ Sluggish durations.', color: 'pink' },
                { title: 'Thief Strike', description: 'Steal 2 gold with ğŸ—¡ï¸ Dagger.', color: 'pink' },
