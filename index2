            const skullMeterModal = document.getElementById('skull-meter-modal');
            const choiceHpButton = document.getElementById('choice-hp');
            const choiceLuckButton = document.getElementById('choice-luck');
            let skullCount = 0;
            let collectedFortunes = [];
            const collectedFortunesContainer = document.getElementById('collected-fortunes-container');

            function updateCollectedFortunesDisplay() {
                if (!collectedFortunesContainer) return;
                collectedFortunesContainer.innerHTML = '';
            
                for (let i = 0; i < 6; i++) {
                    const collection = collectedFortunes[i];
                    const slotEl = document.createElement('div');
                    
                    if (collection) {
                        const fortune = collection.fortune;
                        const sacrifice = collection.sacrifice;
                        let borderColorClass = 'border-purple-700';
                        switch (fortune.color) {
                            case 'blue': borderColorClass = 'border-blue-500'; break;
                            case 'yellow': borderColorClass = 'border-yellow-500'; break;
                            case 'pink': borderColorClass = 'border-pink-500'; break;
                        }
            
                        slotEl.className = `relative h-20 bg-black/30 rounded-lg flex flex-col items-center justify-center text-center p-1 border-2 ${borderColorClass} shadow-inner`;
                        slotEl.innerHTML = `
                            <span class="font-bold text-[11px] leading-tight">${fortune.title}</span>
                            <span class="text-[10px] text-white/70 leading-tight mt-1">${sacrifice.title}</span>
                        `;
            
                        // Tooltip removed as hover effects are not mobile-friendly
            
                    } else {
                        slotEl.className = 'h-20 bg-black/30 rounded-lg flex items-center justify-center text-center p-1 border-2 border-dashed border-purple-900';
                        slotEl.innerHTML = `<span class="text-3xl text-purple-700/50">?</span>`;
                    }
                    collectedFortunesContainer.appendChild(slotEl);
                }
            }

            const showSkullModal = () => {
                skullMeterModal.classList.remove('hidden');
            };

            const hideSkullModal = () => {
                skullMeterModal.classList.add('hidden');
                skullCount = 0;
                skullMeterBar.style.width = '0%';
                skullMeterText.textContent = '0/10';
            };

            choiceHpButton.addEventListener('click', () => {
                player.maxHp += 1;
                player.currentHp += 1;
                updatePlayerUI();
                console.log("Player chose +1 Max HP. New Max HP:", player.maxHp);
                hideSkullModal();
            });

            choiceLuckButton.addEventListener('click', () => {
                player.luck += 5;
                updatePlayerUI();
                console.log("Player chose +5% Luck. New Luck:", player.luck);
                hideSkullModal();
            });
            
            const enemies = [
                { name: 'Ghost', emoji: 'ğŸ‘»', special: null, attack: 1 },
                { name: 'Wolf', emoji: 'ğŸº', special: null, attack: 1 },
                { name: 'Frog', emoji: 'ğŸ¸', special: 'â˜ ï¸', attack: 1 },
                { name: 'Unicorn', emoji: 'ğŸ¦„', special: 'â‡ï¸', attack: 1 },
                { name: 'Dragon', emoji: 'ğŸ²', special: null, attack: 2 },
                { name: 'Serpent', emoji: 'ğŸ', special: 'â˜ ï¸', attack: 1 },
                { name: 'Rat', emoji: 'ğŸ€', special: null, attack: 1 },
                { name: 'Crow', emoji: 'ğŸ¦â€â¬›', special: 'ğŸ•¯ï¸', attack: 1 },
                { name: 'Spider', emoji: 'ğŸ•·ï¸', special: 'â˜ ï¸', attack: 1 },
                { name: 'Scorpion', emoji: 'ğŸ¦‚', special: null, attack: 1 },
                { name: 'Mosquito', emoji: 'ğŸ¦Ÿ', special: 'ğŸŒ', attack: 1 },
                { name: 'Zombie', emoji: 'ğŸ§Ÿ', special: 'ğŸŒ', attack: 1 },
                { name: 'Genie', emoji: 'ğŸ§', special: 'â‡ï¸', attack: 2 },
                { name: 'Troll', emoji: 'ğŸ§Œ', special: null, attack: 1 },
                { name: 'Ninja', emoji: 'ğŸ¥·', special: 'ğŸ«³', attack: 1 },
                { name: 'Vampire', emoji: 'ğŸ§›', special: 'ğŸ•¯ï¸', attack: 1 },
                { name: 'Supervillain', emoji: 'ğŸ¦¹', special: null, attack: 2 },
                { name: 'Gift', emoji: 'ğŸ', special: 'ğŸ‰', attack: 0, maxHealth: 1 }
            ];
            
            let currentEnemies = [];

            const displayEnemyInfo = (finalEnemies) => {
                finalEnemies.forEach((enemy, i) => {
                    enemy.maxHealth = enemy.maxHealth || 10;
                    enemy.currentHealth = enemy.maxHealth;
                    enemy.isDefeated = false;
                    enemy.statusEffects = []; // Initialize status effects array

                    // Exception: If enemy special is Regen, apply it
                    if (enemy.special === 'â‡ï¸') {
                        enemy.statusEffects.push('regen');
                    }

                    const enemyInfo = document.getElementById(`enemy-info-${i + 1}`);
                    enemyInfo.style.visibility = 'visible';

                    document.getElementById(`enemy-name-${i + 1}`).textContent = enemy.name;
                    document.getElementById(`enemy-special-${i + 1}`).textContent = enemy.special || ' ';
                    
                    const healthBar = enemyInfo.querySelector('.health-bar');
                    healthBar.style.width = '100%';
                    const healthText = document.getElementById(`health-text-${i + 1}`);
                    healthText.textContent = `${enemy.currentHealth}/${enemy.maxHealth}`;

                    const reel = document.getElementById(`reel${i + 1}`);
                    const attackValueEl = reel.querySelector('.attack-value');
                    if (attackValueEl) {
                        attackValueEl.innerHTML = `ğŸ’¥${enemy.attack}`;
                        attackValueEl.classList.remove('hidden');
                    }
                });
                enemyInfoArea.classList.remove('hidden');
                updateAllStatusIcons(); // Update UI for new wave
            };

            const showRewardModal = (reelIndex) => {
                const rewards = [
                    { icon: 'â¤ï¸', text: '+1 Max HP', type: 'hp', value: 1 },
                    { icon: 'ğŸ€', text: '+3 Luck', type: 'luck', value: 3 },
                    { icon: 'ğŸ’°', text: '+25 Gold', type: 'gold', value: 25 }
                ];

                const rewardDisplay = document.getElementById('reward-display');
                const rewardText = document.getElementById('reward-text');
                const rewardAction = document.getElementById('reward-action');

                // Reset state for new reward
                rewardModal.classList.remove('hidden');
                rewardDisplay.innerHTML = `<span>â”</span>`;
                rewardDisplay.classList.remove('final-reward-pop');
                rewardText.textContent = '';
                rewardAction.innerHTML = '';
                
                let cycleCount = 0;
                const maxCycles = 20 + Math.floor(Math.random() * 10); // Randomize duration

                const cycleInterval = setInterval(() => {
                    const randomReward = rewards[Math.floor(Math.random() * rewards.length)];
                    rewardDisplay.innerHTML = `<span class="reward-cycle-item">${randomReward.icon}</span>`;
                    cycleCount++;

                    if (cycleCount >= maxCycles) {
                        clearInterval(cycleInterval);
                        const finalReward = rewards[Math.floor(Math.random() * rewards.length)];
                        
                        // Resolve on the winner and apply animation
                        rewardDisplay.innerHTML = `<div class="text-8xl">${finalReward.icon}</div>`;
                        rewardDisplay.classList.add('final-reward-pop');
                        rewardDisplay.addEventListener('animationend', () => {
                             rewardDisplay.classList.remove('final-reward-pop');
                        }, { once: true });

                        // Display the reward text
                        rewardText.textContent = finalReward.text;
                        
                        // Create and display the claim button
                        const claimButton = document.createElement('button');
                        claimButton.id = 'claim-reward-btn';
                        claimButton.className = 'w-full py-2 bg-green-500 rounded-lg font-bold border-2 border-black shadow-[4px_4px_0px_#000] active:shadow-none active:translate-x-1 active:translate-y-1 transition-all';
                        claimButton.textContent = 'Claim';
                        rewardAction.appendChild(claimButton);


                        document.getElementById('claim-reward-btn').addEventListener('click', () => {
                            switch (finalReward.type) {
                                case 'hp':
                                    player.maxHp += finalReward.value;
                                    player.currentHp += finalReward.value;
                                    break;
                                case 'luck':
                                    player.luck += finalReward.value;
                                    break;
                                case 'gold':
                                    player.gold += finalReward.value;
                                    break;
                            }
                            updatePlayerUI();
                            rewardModal.classList.add('hidden');

                            const reel = reels[reelIndex];
                            const reelContent = reel.querySelector('.reel-content');
                            reelContent.textContent = 'â”';
                            reel.disabled = true;
                            reel.classList.add('opacity-50', 'cursor-not-allowed');
                            currentEnemies[reelIndex] = null;
                        }, { once: true });
                    }
                }, 100);
            };

            const spinReels = () => {
                spinButton.disabled = true;
                reels.forEach(reel => {
                    reel.disabled = true;
                    reel.classList.remove('opacity-50', 'cursor-not-allowed');
                    const attackValueEl = reel.querySelector('.attack-value');
                    if (attackValueEl) {
                        attackValueEl.classList.add('hidden');
                    }
                });
                enemyInfoArea.classList.add('hidden');
                
                currentEnemies = [];
                player.statusEffects = []; // Clear player status effects on new spin
                updateAllStatusIcons(); // Clear icons from previous wave

                let spinIntervals = [];

                reels.forEach((reel, i) => {
                    const reelContent = reel.querySelector('.reel-content');
                    spinIntervals[i] = setInterval(() => {
                        const randomIndex = Math.floor(Math.random() * enemies.length);
                        reelContent.textContent = enemies[randomIndex].emoji;
                    }, 100);

                    setTimeout(() => {
                        clearInterval(spinIntervals[i]);
                        const finalIndex = Math.floor(Math.random() * enemies.length);
                        const finalEnemy = { ...enemies[finalIndex] };
                        currentEnemies[i] = finalEnemy;
                        reelContent.textContent = finalEnemy.emoji;
                        reel.disabled = false; 
                        
                        if (i === reels.length - 1) {
                            spinButton.disabled = false;
                            displayEnemyInfo(currentEnemies);
                        }
                    }, 500 + (i * 250)); 
                });
            };

            spinButton.addEventListener('click', spinReels);
            
            function enemyAttack(enemy, reel) {
                if (!enemy || enemy.isDefeated || enemy.attack <= 0) return;

                const reelContent = reel.querySelector('.reel-content');
                
                reelContent.classList.add('zoom-attack');
                reelContent.addEventListener('animationend', () => {
                    reelContent.classList.remove('zoom-attack');
                }, { once: true });

                setTimeout(() => {
                    const totalArmor = player.baseArmor + player.armorBonus;

                    if (enemy.attack > 0 && totalArmor > 0) {
                        playerArmorContainer.classList.add('hit-effect');
                        playerArmorContainer.addEventListener('animationend', () => {
                            playerArmorContainer.classList.remove('hit-effect');
                        }, { once: true });
                    }
                    if (enemy.attack > totalArmor) {
                        playerHpContainer.classList.add('hit-effect');
                        playerHpContainer.addEventListener('animationend', () => {
                            playerHpContainer.classList.remove('hit-effect');
                        }, { once: true });
                    }

                    let damageFromEnemy = enemy.attack;
                    const damageToBonusArmor = Math.min(damageFromEnemy, player.armorBonus);
                    player.armorBonus -= damageToBonusArmor;
                    damageFromEnemy -= damageToBonusArmor;

                    if (damageFromEnemy > 0) {
                        const damageToBaseArmor = Math.min(damageFromEnemy, player.baseArmor);
                        player.baseArmor -= damageToBaseArmor;
                        damageFromEnemy -= damageToBaseArmor;
                    }

                    if (damageFromEnemy > 0) {
                        player.currentHp = Math.max(0, player.currentHp - damageFromEnemy);
                    }
                    
                    updatePlayerUI();

                    // Apply status effect from enemy special
                    const debuffSpecials = {
                        'â˜ ï¸': 'poison',
                        'ğŸ•¯ï¸': 'curse',
                        'ğŸŒ': 'sluggish'
                    };

                    const statusToApply = debuffSpecials[enemy.special];

                    if (statusToApply && !player.statusEffects.includes(statusToApply)) {
                        player.statusEffects.push(statusToApply);
                        updateAllStatusIcons(); // Refresh the UI to show the new status
                        console.log(`Player afflicted with ${statusToApply} by ${enemy.name}`);
                    }

                    if (player.currentHp <= 0) {
                        console.log("PLAYER DEFEATED!");
                        document.body.style.filter = 'grayscale(100%)';
                        spinButton.disabled = true;
                        reels.forEach(r => r.disabled = true);
                    }
                }, 200);
            }

            async function allEnemiesAttack() {
                for (let i = 0; i < currentEnemies.length; i++) {
                    const enemy = currentEnemies[i];
                    const reel = reels[i];
                    // Only attack if the enemy exists and is not defeated
                    if (enemy && !enemy.isDefeated) {
                        // Wait for a short duration before each attack for sequence effect
                        await new Promise(resolve => setTimeout(resolve, 500));
                        enemyAttack(enemy, reel);
                    }
                }

                // After all enemies have had a chance to attack, re-enable the player's controls
                await new Promise(resolve => setTimeout(resolve, 500));
                reels.forEach((r, i) => {
                    // A reel is only enabled if there is an enemy (alive or a skull to collect)
                    if (currentEnemies[i]) {
                        r.disabled = false;
                    }
                });
            }

            function applyDamageAndAnimate(index, damageAmount) {
                const enemy = currentEnemies[index];
                if (!enemy || enemy.isDefeated) return;

                const reel = reels[index];
                
                const damagePopup = document.createElement('div');
                damagePopup.textContent = `${damageAmount}`;
                damagePopup.className = 'damage-popup';
                reel.appendChild(damagePopup);
                damagePopup.addEventListener('animationend', () => damagePopup.remove());

                reel.classList.add('shake');
                reel.addEventListener('animationend', () => reel.classList.remove('shake'), { once: true });
                
                enemy.currentHealth -= damageAmount;

                const enemyInfo = document.getElementById(`enemy-info-${index + 1}`);
                const healthBar = enemyInfo.querySelector('.health-bar');
                const healthText = document.getElementById(`health-text-${index + 1}`);

                if (enemy.currentHealth <= 0) {
                    enemy.currentHealth = 0;
                    enemy.isDefeated = true;
                    healthBar.style.width = '0%';
                    healthText.textContent = `0/${enemy.maxHealth}`;
                    updateAllStatusIcons();

                    if (enemy.emoji === 'ğŸ') {
                        setTimeout(() => {
                            enemyInfo.style.visibility = 'hidden';
                            reel.querySelector('.attack-value')?.classList.add('hidden');
                            showRewardModal(index);
                        }, 300);
                    } else {
                        setTimeout(() => {
                            reel.querySelector('.reel-content').textContent = 'ğŸ’€';
                            reel.classList.remove('opacity-50', 'cursor-not-allowed');
                            enemyInfo.style.visibility = 'hidden';
                            reel.querySelector('.attack-value')?.classList.add('hidden');
                        }, 300);
                    }
                } else {
                    const healthPercent = (enemy.currentHealth / enemy.maxHealth) * 100;
                    healthBar.style.width = `${healthPercent}%`;
                    healthText.textContent = `${enemy.currentHealth}/${enemy.maxHealth}`;
                }
            }


            function castSpell(spellName) {
                closeModal();
                reels.forEach(r => r.disabled = true);
            
                switch (spellName) {
                    case 'flameheart':
                        console.log('Casting Flameheart...');
                        currentEnemies.forEach((enemy, index) => {
                            if (enemy && !enemy.isDefeated) {
                                applyDamageAndAnimate(index, 5);
                            }
                        });
                        player.currentHp = Math.min(player.maxHp, player.currentHp + 5);
                        updatePlayerUI();
                        break;
            
                    case 'frostbite':
                        console.log('Casting Frostbite...');
                        currentEnemies.forEach((enemy, index) => {
                            if (enemy && !enemy.isDefeated) {
                                applyDamageAndAnimate(index, 5);
                                // Apply sluggish if not already present
                                if (!enemy.statusEffects.includes('sluggish')) {
                                    enemy.statusEffects.push('sluggish');
                                }
                            }
                        });
                        updateAllStatusIcons();
                        break;
            
                    case 'armorheart':
                        console.log('Casting Armorheart...');
                        player.armorBonus += player.currentHp;
                        updatePlayerUI();
                        // Animate the armor gain
                        playerArmorContainer.classList.add('armor-gain');
                        playerArmorContainer.addEventListener('animationend', () => {
                            playerArmorContainer.classList.remove('armor-gain');
                        }, { once: true });
                        break;
                }
            
                // Enemies attack after the spell is cast
                setTimeout(() => {
                    allEnemiesAttack();
                }, 800); // A slightly longer delay for spell effects to be visible
            }


            reels.forEach((reel, index) => {
                reel.addEventListener('click', () => {
                    const enemy = currentEnemies[index];
                    const reelContent = reel.querySelector('.reel-content');

                    // Handle skull collection first, as it's a separate action
                    if (enemy && enemy.isDefeated && reelContent.textContent === 'ğŸ’€') {
                        skullCount++;
                        const skullPercent = Math.min((skullCount / 10) * 100, 100);
                        skullMeterBar.style.width = `${skullPercent}%`;
                        skullMeterText.textContent = `${skullCount}/10`;

                        reelContent.textContent = 'â”';
                        reel.disabled = true;
                        reel.classList.add('opacity-50', 'cursor-not-allowed');
                        currentEnemies[index] = null; 

                        if (skullCount >= 10) {
                            setTimeout(showSkullModal, 300);
                        }
                        return;
                    }
                    
                    // Guard against clicking disabled reels or defeated enemies
                    if (reel.disabled || !enemy || enemy.isDefeated) {
                        return;
                    }

                    // --- PLAYER'S TURN START ---
                    reels.forEach(r => r.disabled = true); // Disable all reels during the turn sequence
                    
                    const totalPlayerAttack = player.baseAttack + player.attackBonus;
                    
                    applyDamageAndAnimate(index, totalPlayerAttack);
                    
                    // --- PLAYER'S TURN END ---
                    // After a delay, trigger the enemy counter-attack sequence
                    setTimeout(() => {
                        allEnemiesAttack();
                    }, 250);
                });
            });

            // EQUIPMENT MODAL LOGIC
            const equipSlotButtons = document.querySelectorAll('.equip-slot-btn');
            const equipChoices = document.querySelectorAll('.equip-choices');
            const equipChoiceButtons = document.querySelectorAll('.equip-choices button:not([disabled])');
            const statusWeaponIcon = document.getElementById('status-weapon-icon');
            const statusArmorIcon = document.getElementById('status-armor-icon');

            function handleEquipChoice(event) {
                const choiceButton = event.currentTarget;
                const newEmoji = choiceButton.dataset.emoji;
                const newTitle = choiceButton.dataset.title;
                
                const parentChoices = choiceButton.closest('.equip-choices');
                const parentChoicesId = parentChoices.id;
                const slotButton = document.querySelector(`.equip-slot-btn[data-target='${parentChoicesId}']`);

                if (slotButton) {
                    const emojiContainer = slotButton.children[0];
                    const textContainer = slotButton.children[1];
                    
                    emojiContainer.textContent = newEmoji;
                    textContainer.textContent = newTitle;
                }

                const statType = choiceButton.dataset.statType;
                const statValue = parseInt(choiceButton.dataset.statValue);

                if (parentChoicesId === 'weapon-choices') {
                    statusWeaponIcon.textContent = newEmoji;
                    player.attackBonus = (statType === 'attack') ? statValue : 0;
                } else if (parentChoicesId === 'armor-choices') {
                    statusArmorIcon.textContent = newEmoji;
                    player.armorBonus = (statType === 'armor') ? statValue : 0;
                }
                
                updatePlayerUI();
            }

            function unlockInfinityRing() {
                const ringChoicesContainer = document.getElementById('ring-choices');
                const placeholderButton = document.getElementById('ring-slot-2');
                if (!ringChoicesContainer || !placeholderButton) return;

                const newRingButton = document.createElement('button');
                newRingButton.dataset.emoji = "â™¾ï¸";
                newRingButton.dataset.title = "Infinity Ring";
                newRingButton.dataset.statType = "none";
                newRingButton.dataset.statValue = "0";
                newRingButton.className = "w-full text-center py-1 px-2 bg-black/20 rounded-lg focus:bg-blue-900/50 focus:outline-none transition-colors";
                newRingButton.innerHTML = `â™¾ï¸ Infinity Ring`;
                
                newRingButton.addEventListener('click', handleEquipChoice);
                
                ringChoicesContainer.replaceChild(newRingButton, placeholderButton);
            }

            equipSlotButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetId = button.dataset.target;
                    const targetChoices = document.getElementById(targetId);

                    equipChoices.forEach(choiceDiv => {
                        choiceDiv.classList.add('hidden');
                    });

                    if (targetChoices) {
                        targetChoices.classList.remove('hidden');
                    }
                });
            });

            equipChoiceButtons.forEach(button => {
                button.addEventListener('click', handleEquipChoice);
            });
            
            const equipmentModalButton = document.querySelector('[data-modal-target="system-modal-wrapper"]');
            equipmentModalButton.addEventListener('click', () => {
                setTimeout(() => {
                    const firstSlot = document.querySelector('#system-modal-wrapper .equip-slot-btn');
                    if(firstSlot) {
                        firstSlot.focus();
                        firstSlot.click();
                    }
                },0);
            });

            // TUTORIAL MODAL LOGIC
            const tutorialOpenBtn = document.getElementById('tutorial-open-btn');
            const tutorialModal = document.getElementById('tutorial-modal-wrapper');
            const tutorialCloseBtn = document.getElementById('tutorial-close-btn');

            if (tutorialOpenBtn && tutorialModal && tutorialCloseBtn) {
                tutorialOpenBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    tutorialModal.classList.remove('hidden');
                });

                tutorialCloseBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    tutorialModal.classList.add('hidden');
                });
            }

            // Initialize views on load
            updatePlayerUI();
            updateCollectedFortunesDisplay();
            updateMagicUI();
            updateAllStatusIcons(); // Ensure all statuses are hidden on start

        });
    </script>
</body>
</html>
